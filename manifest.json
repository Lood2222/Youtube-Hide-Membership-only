{
  "manifest_version": 2,
  "name": "YouTube Hide Membership Only",
  "version": "2.0",
  "description": "Hides members only content on YouTube.",
  "permissions": [
    "https://www.youtube.com/*",
    "storage",
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "YouTube Hide Membership Only",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{e99fd57c-80ad-4b3c-b53d-990c878ada35}"
    }
  }
}